<link rel="stylesheet" type="text/css" href="../public/css/style.css" />

<h2>Search</h2>

<form action="/movies/results" method="POST">
  <div class="form-group">
    <label for="name">Search</label>
    <input list="movielist" id="name" class="form-control" type="text" name="name" autofocus placeholder="Enter Movie Name...">
      <datalist id="movielist">
        <% for (var i = 0; i < movie.length; i++) { %>
          <option value="<%= movie[i].dataValues.name %>">
        <% } %>
    </datalist>
    <input id="submit" class="btn btn-primary" type="submit">
  </div>
</form>

